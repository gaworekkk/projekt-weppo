<%- include('partials/header.ejs') %>
<div class="login-container">

    <div class="login-card">
        <h2>Sign In</h2>

        <% if (message) { %>
            <div>
                <%= message %>
            </div>
        <% } %>

        <form action="/login<%= typeof returnUrl !== 'undefined' ? '?returnUrl=' + returnUrl : '' %>" method="POST">
            <div class="form-group">
                <input type="text" name="txtUser" placeholder="Email or username">
            </div>
            
            <div class="form-group">
                <input type="password" name="txtPwd" placeholder="password">
            </div>

            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>

        <div class="divider"></div>

        <p class="text-center">OR</p>
        <a href="<%= google %>" style="text-decoration: none;">
            <button type="button" class="btn btn-google">
                Sign In with Google
            </button>
        </a>

        <div class="register-link">
            New here? <a href="/register">Sign up</a>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>